<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewServerConnections"
        android:layout_width="126dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="174dp"
        android:gravity="center"
        android:text="@string/system_information_title"
        android:textColor="@color/ambient_mode_text"
        android:textSize="12sp" />

    <Button
        android:id="@+id/toastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtViewServerConnections"
        android:layout_alignEnd="@+id/txtViewServerConnections"
        android:layout_marginStart="12dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="12dp"
        android:text="@string/refresh_button_text"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtViewMemoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="110dp"
        android:text="@string/memory_title_text"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/progressBarMemory"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/txtViewCPUTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="142dp"
        android:text="@string/cpu_title_text"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/progressBarCPU"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="129dp" />

    <TextView
        android:id="@+id/txtViewDiskRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="142dp"
        android:text="@string/disk_read_title"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtViewDiskWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="110dp"
        android:text="@string/disk_write_title"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtviewLastRefreshed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/toastButton"
        android:layout_alignEnd="@+id/toastButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:text="@string/refreshed_at_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp" />


</RelativeLayout>